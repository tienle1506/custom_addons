<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="datn_congthucte_tree" model="ir.ui.view">
            <field name="name">Bảng công thực tế</field>
            <field name="model">datn.congthucte</field>
            <field name="arch" type="xml">
                <tree class="widget-department-tree"
                      decoration-info="state=='draft'"
                      default_order="department_id">
                    <field name="department_id"/>
                    <field name="name"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="datn_congthucte_form" model="ir.ui.view">
            <field name="name">Bảng công thực tế</field>
            <field name="model">datn.congthucte</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <group>
                        <field name="name" required="1" readonly="1" force_save="1"></field>
                    </group>
                    <group>
                        <group>
                            <field name="department_id" readonly="1" force_save="1"
                                   options="{'no_quick_create': 1, 'no_create_edit': 1, 'no_open': 1, 'no_create': 1}"/>
                            <field name="nguoi_duyet" widget="many2many_tags" options="{'no_quick_create': 1, 'no_create_edit': 1, 'no_open': 1, 'no_create': 1}"/>
                        </group>
                        <group class="date_cc">
                            <label for="date_from" string="Chu kỳ chấm công"/>
                            <div>
                                <field name="date_from"
                                       class="date1 oe_inline" readonly="1" force_save="1"/>
                                -
                                <field name="date_to" readonly="1" force_save="1"
                                       class="date2 oe_inline"/>
                            </div>
                        </group>
                    </group>
                    <group>
                        <field name="create_date" widget="date" string="Ngày tạo"
                               attrs="{'invisible': [('id','=',False)]}"
                               style="max-width: 200px;" readonly="1" force_save="1"/>
                    </group>

                    <notebook>
                        <page string="Bảng chi tiết oông thưc tết" name="data_timesheet">
                            <field name="item_ids"
                                   widget="one2many_list">
                                <tree create="0" open="0" edit="0"
                                      class="color_tree_row"
                                      tableFixer="left" fixColumn="2"
                                      default_order="employee_id ASC" limit="100">
                                    <field name="employee_id" required="1" widget="many2one" options="{'no_quick_create': 1, 'no_create_edit': 1, 'no_open': 1, 'no_create': 1}"/>
                                    <field name="department_id" readonly="1" force_save="1"/>
                                    <field name="date_from" readonly="1" force_save="1"/>
                                    <field name="date_to" readonly="1" force_save="1"/>
                                    <field name="cong_chuan" readonly="1" force_save="1"/>
                                    <field name="cong_thuc_te" readonly="1" force_save="1"/>
                                    <field name="cong_phep" readonly="1" force_save="1"/>
                                    <field name="cong_khong_luong" readonly="1" force_save="1"/>
                                    <field name="cong_co_luong" readonly="1" force_save="1"/>
                                    <field name="cong_tang_ca" readonly="1" force_save="1"/>
                                    <field name="cong_nghi_khong_ly_do" readonly="1" force_save="1"/>

                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="datn_congthucte_search" model="ir.ui.view">
            <field name="name">Bảng công thực tế</field>
            <field name="model">datn.congthucte</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('ref','ilike',self)]" string="Tên"/>
                    <group expand="0" string="Group By">
                        <filter name="date_from" string="Tháng" domain="[]" context="{'group_by':'date_from'}"/>
                        <filter name="department_id" string="Đơn vị/ phòng ban" domain="[]" context="{'group_by':'department_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="datn_congthucte_action" model="ir.actions.act_window">
            <field name="name">Bảng công thực tế</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">datn.congthucte</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_date_from':1, 'search_default_department_id':1, 'view_from_action_all': 'datn_hr_checkin_checkout'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Nhập các tiêu chí để tìm kiếm thông tin Bảng công thực tế.
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window.view" id="datn_congthucte_tree_action">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="datn_congthucte_tree"/>
            <field name="act_window_id" ref="datn_congthucte_action"/>
        </record>

        <record model="ir.actions.act_window.view" id="datn_congthucte_form_action">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="datn_congthucte_form"/>
            <field name="act_window_id" ref="datn_congthucte_action"/>
        </record>
    </data>
</odoo>