<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="datn_cong_tang_cuong_tree" model="ir.ui.view">
            <field name="name">Quản lý lễ tết</field>
            <field name="model">datn.cong.tang.cuong</field>
            <field name="arch" type="xml">
                <tree class="widget-department-tree"
                      decoration-info="state=='draft'"
                      default_order="department_id">
                    <field name="name"/>
                    <field name="department_id" widget="many2many_tags"/>
                    <field name="ngay_tao"/>
                    <field name="year"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="datn_cong_tang_cuong_form" model="ir.ui.view">
            <field name="name">Quản lý công tăng cường</field>
            <field name="model">datn.cong.tang.cuong</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Xác nhận" name="action_confirmed" type="object" states="draft"
                                class="oe_highlight oe_edit_only"/>
                        <button string="Soạn thảo" name="action_draft" type="object"
                                states="confirmed" class="oe_edit_only"/>
                        <button string="Tải dữ liệu" attrs="{'invisible': [('state','=','confirmed')]}"
                                name="action_loaddata" type="object" class="oe_highlight oe_edit_only"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <group>
                        <field name="name" required="1"/>
                    </group>
                    <group>
                        <group>
                            <field string="Đơn vị/ phòng ban" name="department_id" widget="many2many_tags" required="1"
                               options="{'no_quick_create': 1, 'no_create_edit': 1, 'no_open': 1, 'no_create': 1}"/>
                        </group>
                        <group class="cong_them">
                                <field name="cong_them" required="1"/>
                                <field name="year" required="1"/>
                        </group>
                    </group>
                    <group>
                            <group>
                                <field name="is_import" attrs="{'readonly': [('state','==','confirmed')]}"/>
                                <label for="is_import" string="Tải tập tin mẫu" attrs="{'invisible': [('is_import','=',False)]}"/>
                                <div attrs="{'invisible': [('is_import','=',False)]}">
                                    <button type="object" name="download_template_file" string="Tải file mẫu"
                                            attrs="{'invisible': [('is_import','=',False)]}" class="oe_highlight btn-sm"/>
                                </div>
                            </group>
                            <group>
                                <field name="datn_file" attrs="{'readonly': [('state','==','confirmed')], 'invisible': [('is_import','=',False)]}" filename="file_name"/>
                                <field name="file_name" invisible="1"/>
                                <label for="file_name" string="Import" attrs="{'invisible': ['|',('state','==','confirmed'),('datn_file','==',False)]}"/>
                                <div attrs="{'invisible': [('is_import','=',False)]}">
                                    <button name="import_data" type="object" string="Import dữ liệu" attrs="{'invisible': ['|',('datn_file','=', False), ('state','==','confirmed')], 'readonly': [('state','==','confirmed')]}" class="btn-primary btn-sm"/>
                                </div>
                            </group>
                        </group>
                    <group>
                        <group>
                            <field name="ngay_tao" widget="date" string="Ngày tạo"
                                   attrs="{'invisible': [('id','=',False)]}"
                                   style="max-width: 200px;" readonly="1" force_save="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Danh sách nhân sự hưởng công tăng cường" name="data_timesheet">
                            <field name="item_ids"
                                   widget="one2many_list">
                                <tree editable="bottom" create="true" open="false"
                                      class="color_tree_row"
                                      tableFixer="left" fixColumn="2"
                                      default_order="employee_id ASC" limit="100">
                                    <field name="employee_id" required="1" widget="many2one" context="{'parent_department_id_le': parent.department_id}"
                                           options="{'no_quick_create': 1, 'no_create_edit': 1, 'no_open': 1, 'no_create': 1}"/>
                                    <field name="department_id" readonly="1" force_save="1" options="{'no_quick_create': 1, 'no_create_edit': 1, 'no_open': 1, 'no_create': 1}"
                                    />
                                    <field name="cong_them"/>
                                    <field name="year" readonly="1" force_save="1" required="1"/>
                                    <field name="note"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="datn_cong_tang_cuong_search" model="ir.ui.view">
            <field name="name">Quản lý công tăng cường</field>
            <field name="model">datn.cong.tang.cuong</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('ref','ilike',self)]" string="Move"/>
                    <field name="year"/>
                     <group expand="0" string="Group By">
                        <filter name="year" string="Năm" domain="[]" context="{'group_by':'year'}"/>
                        <filter name="department_id" string="Đơn vị/ phòng ban" domain="[]" context="{'group_by':'department_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="datn_cong_tang_cuong_action" model="ir.actions.act_window">
            <field name="name">Quản lý công tăng cường</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">datn.cong.tang.cuong</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'view_from_action': 'datn_cong_tang_cuong'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Nhập các tiêu chí để tìm kiếm thông tin Quản lý công tăng cường.
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window.view" id="datn_cong_tang_cuong_tree_action">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="datn_cong_tang_cuong_tree"/>
            <field name="act_window_id" ref="datn_cong_tang_cuong_action"/>
        </record>

        <record model="ir.actions.act_window.view" id="datn_cong_tang_cuong_form_action">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="datn_cong_tang_cuong_form"/>
            <field name="act_window_id" ref="datn_cong_tang_cuong_action"/>
        </record>
    </data>
</odoo>