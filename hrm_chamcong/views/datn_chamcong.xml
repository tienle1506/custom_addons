<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="datn_hr_chamcong_reload_form" model="ir.ui.view">
            <field name="name">datn.hr.chamcong.reload.form</field>
            <field name="model">datn.hr.chamcong</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                            </group>
                            <group>
                                <field name="day_reload" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="datn_hr_chamcong_tree" model="ir.ui.view">
            <field name="name">Bảng chấm công tháng</field>
            <field name="model">datn.hr.chamcong</field>
            <field name="arch" type="xml">
                <tree class="widget-department-tree"
                      decoration-info="state=='draft'"
                      default_order="month_year_chuky desc, department_id">
                    <field name="department_id"/>
                    <field name="name" string="Tên bảng chấm công"/>
                    <field name="month_year_chuky" widget="month_year"/>
                    <field name="date_from" invisible="1"/>
                    <field name="date_to" invisible="1"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="datn_hr_chamcong_form" model="ir.ui.view">
            <field name="name">Bảng chấm công tháng</field>
            <field name="model">datn.hr.chamcong</field>
            <field name="arch" type="xml">
                <form class="bangchamcong fixed-scrollbar">

                    <group invisible="1">
                        <field name="name" string="Tên bảng chấm công" invisible="1"/>
<!--                               attrs="{'readonly': [('state', '=', 'confirmed')]}"/>-->
                    </group>
                    <group>
                        <field name="department_id"
                               options="{'no_quick_create': 1, 'no_create_edit': 1, 'no_open': 1, 'no_create': 1}"/>
                    </group>

                    <group invisible="1">
                        <group class="date_cc">
                            <label for="date_from" string="Chu kỳ chấm công"/>
                            <div>
                                <field name="date_from" attrs="{'readonly': [('state', '=', 'confirmed')]}"
                                       class="date1 oe_inline"/>
                                -
                                <field name="date_to" attrs="{'readonly': [('state', '=', 'confirmed')]}"
                                       class="date2 oe_inline"/>
                            </div>
                        </group>
                        <group>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="month_year_chuky" class="oe_inline" widget="month_year"/>
<!--                                   attrs="{'readonly': [('state','=','confirmed')]}"/>-->
                        </group>
                        <group>
                            <field name="create_date" widget="date" string="Ngày tạo"
                                   attrs="{'invisible': [('id','=',False)]}"
                                   style="max-width: 200px;" readonly="1" force_save="1"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

    </data>
</odoo>