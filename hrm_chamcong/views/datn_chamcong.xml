<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="datn_hr_chamcong_tree" model="ir.ui.view">
            <field name="name">Bảng chấm công tháng</field>
            <field name="model">datn.hr.chamcong</field>
            <field name="arch" type="xml">
                <tree class="widget-department-tree"
                      decoration-info="state=='draft'"
                      default_order="month_year_chuky desc, department_id">
                    <field name="department_id"/>
                    <field name="name" string="Tên bảng chấm công"/>
                    <field name="month_year_chuky" widget="month_year"/>
                    <field name="date_from" invisible="1"/>
                    <field name="date_to" invisible="1"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <record id="chamcong" model="ir.actions.act_window">
            <field name="name">Chấm công</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">datn.hr.chamcong</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('datn_hr_chamcong_tree')})]"/>
        </record>

    </data>
</odoo>