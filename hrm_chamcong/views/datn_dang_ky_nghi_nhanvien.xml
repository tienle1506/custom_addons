<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="datn_dang_ky_nghi_nhanvien_tree" model="ir.ui.view">
            <field name="name">Đăng ký nghỉ nhân viên</field>
            <field name="model">datn.dangkynghi</field>
            <field name="arch" type="xml">
                <tree class="widget-department-tree"
                      decoration-info="state=='draft'"
                      default_order="employee_id">
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="loai_nghi"/>
                    <field name="so_ngay_nghi"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="datn_dang_ky_nghi_nhanvien_form" model="ir.ui.view">
            <field name="name">Đăng ký nghỉ nhân viên</field>
            <field name="model">datn.dangkynghi</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Gửi phê duyệt" name="action_send_approve" type="object" attrs="{'invisible': [('state','!=','draft')]}"
                                class="oe_highlight"/>
                        <button string="Phê duyệt" name="action_approve" type="object" attrs="{'invisible': ['|', ('state','=','draft'), ('state','=','approved')]}"
                                groups="hrm_chamcong.hrm_phe_duyet_dang_ky_nghi"
                                class="oe_highlight"/>
                        <button string="Từ chối" name="action_refuse" type="object" attrs="{'invisible': [('state','!=','approved')]}"
                                class="oe_highlight"
                                groups="hrm_chamcong.hrm_phe_duyet_dang_ky_nghi"/>
                        <button string="Soạn thảo" name="action_draft" type="object"
                                attrs = "{'invisible': [('state', 'in', ['draft','confirmed', 'approved'])]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <group>
                        <group>
                            <field options="{'no_quick_create': 1, 'no_create_edit': 1, 'no_open': 1, 'no_create': 1}" name="employee_id" required="1" readonly="1" force_save="1"/>
                            <field name="department_id"  required="1" readonly="1" force_save="1"/>
                            <field name="date_from" class="date1 oe_inline" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="date_to" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="ly_do" style="max-width: 200px;" attrs="{'readonly': [('state','!=','draft')]}" domain=""/>
                            <field name="so_ngay_nghi" required="1"/>
                        </group>
                        <group>
                            <field string="Người duyệt" name="nguoi_duyet" required="1" widget="many2many_tags" attrs="{'readonly': [('state','!=','draft')]}" context="{'list_employee_phe_duyet': 'Phê duyệt đăng ký nghỉ', 'department_phe_duyet': employee_id}"/>
                            <field string="Loại nghỉ" name="loai_nghi" required="1"
                                   attrs="{'readonly': [('state','!=','draft')]}"
                                   domain="[('trang_thai_ap_dung', '=', 'True')]"
                                   options="{'no_quick_create': 1, 'no_create_edit': 1, 'no_open': 1, 'no_create': 1}"/>
                            <field string="Số ngày được phân bổ" name="so_ngay_duoc_phan_bo" required="1"/>
                            <field string="Số ngày đã nghỉ" name="so_ngay_da_nghi" required="1"/>
                            <field name="create_date" widget="date" string="Ngày tạo"
                                   attrs="{'invisible': [('id','=',False)]}"
                                   style="max-width: 200px;" readonly="1" force_save="1"/>
                        </group>
                    </group>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="datn_dangkynhgi_search" model="ir.ui.view">
            <field name="name">Quản lý lễ tết</field>
            <field name="model">datn.dangkynghi</field>
            <field name="arch" type="xml">
                <search>
                    <filter name="state_draft" string="Soạn thảo" domain="[('state', '=', 'draft')]"/>
                    <filter name="state_confirmed" string="Chờ phê duyệt" domain="[('state', '=', 'confirmed')]"/>
                    <filter name="state_approved" string="Phê duyệt" domain="[('state', '=', 'approved')]"/>
                    <filter name="state_refused" string="Từ chối" domain="[('state', '=', 'refused')]"/>
                </search>
            </field>
        </record>

        <record id="datn_dang_ky_nghi_nhanvien_action" model="ir.actions.act_window">
            <field name="name">Đăng ký nghỉ nhân viên</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">datn.dangkynghi</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'view_from_action': 'datn_dangkynghi'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Tạo mới một bản ghi đang ký nghỉ.
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window.view" id="datn_dang_ky_nghi_nhanvien_tree_action">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="datn_dang_ky_nghi_nhanvien_tree"/>
            <field name="act_window_id" ref="datn_dang_ky_nghi_nhanvien_action"/>
        </record>

        <record model="ir.actions.act_window.view" id="datn_dang_ky_nghi_nhanvien_form_action">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="datn_dang_ky_nghi_nhanvien_form"/>
            <field name="act_window_id" ref="datn_dang_ky_nghi_nhanvien_action"/>
        </record>
    </data>
</odoo>