<odoo>
    <data>
        <record id="view_company_form" model="ir.ui.view">
            <field name="name">hrm.company.form</field>
            <field name="model">hr.company</field>
            <field name="arch" type="xml">
                    <form string="Công ty">
                    <sheet>
                        <group>
                            <field name="name_display" readonly="1" />
                        </group>
                        <group>
                            <group>

                                <field name="name" string="Tên công ty" />
                                <field name="parent_id" string="Công ty cha" />
                                <field name="system_company_level" force_save="1"/>
                                <field name="type_company" required="1"/>
                                <field name="readonly_sys" invisible="1"/>
                                <field name="system_id" string="Hệ thống" required="1" attrs="{'readonly': [('readonly_sys', '=', True)]}" />
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="phone_num"/>
                                <field name="chairperson"/>
                                <field name="vice_president"/>
                            </group>
                        </group>
                    </sheet>
<!--                    <div class="oe_chatter">-->
<!--                        <field name="message_follower_ids"/>-->
<!--                        <field name="activity_ids"/>-->
<!--                        <field name="message_ids"/>-->
<!--                    </div>-->
                </form>
            </field>
        </record>


        <record id="view_company_tree" model="ir.ui.view">
            <field name="name">hrm.company.tree</field>
            <field name="model">hr.company</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name_display"/>
                    <field name="name"/>
                    <field name="phone_num"/>
                    <field name="chairperson"/>
                    <field name="vice_president"/>
                </tree>
            </field>
        </record>

        <record id="company_action" model="ir.actions.act_window">
            <field name="name">Công ty</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.company</field>
<!--            <field name="search_view_id" ref="view_hrm_system_search"/>-->
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_company_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_company_form')})]"/>
        </record>
    </data>
</odoo>