<odoo>
    <data>
        <record id="hr_kanban_view_employees_inherit" model="ir.ui.view">
            <field name="name">hr.employee.kanban.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
            <field name="arch" type="xml">
                <xpath expr="//li[@t-if='record.work_email.raw_value']" position="replace">
                    <li t-if="record.email_work.raw_value" class="o_text_overflow">
                        <field name="email_work"/>
                    </li>
                </xpath>
                <xpath expr="//li[@t-if='record.work_phone.raw_value']" position="replace">
                    <li t-if="record.mobile_phone.raw_value" class="o_force_ltr">
                        <field name="mobile_phone"/>
                    </li>
                </xpath>

            </field>
        </record>
        <record id="view_hr_employee_form_inherit" model="ir.ui.view">
            <field name="name">view.hr.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="replace">
                    <header attrs="{'invisible': [('id', '=', False)]}">
                        <button name="action_send" string="Gửi duyệt" type="object" class="btn-primary"/>
                        <button name="action_cancel" string="Hủy" type="object"/>
                        <button name="%(action_lock_personnel_account_popup)d" type="action" string="Khóa TK nhân sự"
                                class="btn-red"
                                attrs="{'invisible': ['|', ('account_link', '=', False), ('status_account', '=', False)]}">
                        </button>
                        <button name="%(reason_reopening_account_action)d" type="action"
                                string="Mở lại tài khoản nhân sự"
                                class="btn-red">
                        </button>
<!--                        <button name="action_cancel_reopen_account" string="Hủy" type="object"-->
<!--                                class="btn-secondary"-->
<!--                                attrs="{'invisible': [('cancelled_reopen_account', '=', True)]}"/>-->
                        <field name="state" widget="statusbar" statusbar_visible="draft,pending,approved,close,wait_reopen"/>
                    </header>
                </xpath>
                <xpath expr="//div[@id='o_work_employee_main']" position="replace">
                    <div id="o_work_employee_main">
                        <group string="Phòng ban làm việc">
                            <field name="company_id" required="0" invisible="1"/>
                            <field name="department_id" string="Hệ thống / Công ty" required="1"
                                   attrs="{'invisible': [('type_block', '!=', 'BLOCK_COMMERCE_NAME')]}"/>
                            <field name="department_id" string="Phòng ban" required="1"
                                   attrs="{'invisible': [('type_block', '!=', 'BLOCK_OFFICE_NAME')]}"/>
                            <field name="job_id" string="Vị trí công việc"/>
                            <field name="parent_id" string="Quản lý trực tiếp"/>
                            <field name="team_marketing"
                                   attrs="{'invisible': [('type_in_block_ecom', '!=', 'company')]}"/>
                            <field name="team_sales"
                                   attrs="{'invisible': [('type_in_block_ecom', '!=', 'company')]}"/>
                        </group>
                        <group>
                            <field name="work_start_date"/>
                            <field name="date_receipt"/>
                            <field name="profile_status"/>
                            <field name="id"/>
                            <field name="create_uid"/>
                        </group>
                    </div>
                </xpath>
                <xpath expr="//div[@class='oe_title']/h1" position="after">
                    <h2>
                        <field name="employee_code" string="Mã nhân viên" readonly="1" force_save="1"/>
                    </h2>
                </xpath>
                <xpath expr="//field[@name='category_ids']" position="replace">
                    <group id="block" string="Khối">
                        <field name="type_block" string="Khối"
                               attrs="{'readonly': [('readonly_type_block', '=', True)]}"/>
                        <field name="readonly_type_block" invisible="1"/>
                        <field name="type_in_block_ecom"
                               attrs="{'invisible': [('type_block', '!=', 'BLOCK_COMMERCE_NAME')], 'required': [('type_block', '=', 'BLOCK_COMMERCE_NAME')]}"/>
                    </group>
                </xpath>
                <xpath expr="//div[@class='oe_title']" position="after">
                    <!-- Thêm group vào sau div có class="oe_title" -->
                    <sheet>
                        <group col="2">
                            <group string="Liên hệ">
                                <field name="personal_email" string="Email cá nhân"/>
                                <field name="email_work" readonly="1" string="Email công việc"/>
                                <field name="mobile_phone" string="Số điện thoại cá nhân"/>

                            </group>
                            <group>
                                <field name="auto_create_acc"/>
                            </group>
                        </group>

                    </sheet>
                </xpath>
                <xpath expr="//page[@name='personal_information']" position="replace">
                    <!-- Bạn có thể để trống nếu muốn xóa toàn bộ page này -->
                </xpath>
                <xpath expr="//div[@class='o_row']" position="attributes">
                    <attribute name="position">remove</attribute>
                </xpath>
                <xpath expr="//field[@name='department_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='coach_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='mobile_phone']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='work_phone']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='work_email']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='hr_settings']" position="after">
                    <page name="approval_status" string="Trạng thái phê duyệt"
                          attrs="{'invisible': [('approved_name', '=', False)]}">
                        <field name="approved_name" readonly="1"/>
                        <field name="approved_link" readonly="1">
                            <tree default_order="step ASC" class="hrm_custom_tree_notebook">
                                <field name="step"/>
                                <field name="approve"/>
                                <field name="obligatory"/>
                                <field name="excess_level"/>
                                <field name="approve_status"/>
                                <field name="time"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Thiết lập nhân sự" attrs="{'invisible': [('id', '=', False)]}">
                        <group>
                            <group>
                                <field name="account_link"/>
                                <field name="status_account" widget="boolean_toggle"
                                       attrs="{'invisible': [('account_link', '=', False)]}"/>
<!--                                <field name="status_account" widget="boolean_toggle"-->
<!--                                       attrs="{'invisible': [('account_link', '=', False)]}"/>-->
                            </group>
                            <group>
                                <!--                                <field name="date_close"/>-->
                                <!--                                <field name="date_open"/>-->
                                <field name="url_reset_password_valid" invisible="1"/>
                            </group>
                        </group>
                        <div class="alert alert-success text-center o_form_header"
                             attrs="{'invisible': ['|',('url_reset_password_valid', '=', False),('status_account', '=', False)]}"
                             role="status">
                            <a class="close" data-dismiss="alert" href="#" aria-label="Close">
                                x
                            </a>
                            <div>
                                <strong>
                                    Một email chứa liên kết khôi phục mật khẩu sau đã được gửi:
                                </strong>
                            </div>
                            <div>
                                <field name="url_reset_password" widget="url" on_change="1" id="signup_url"/>
                            </div>
                        </div>
                    </page>
                </xpath>
            </field>
        </record>

