                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <field name="image_1920" widget='image' class="oe_avatar"
                               options='{"zoom": true, "preview_image":"image_128"}'/>
                        <div class="oe_title">
                            <h1 class="d-flex">
                                <field name="name" placeholder="Employee's Name" required="True"/>

                            </h1>
                            <h2>
                                <field name="employee_code" string="Mã nhân viên" placeholder="Mã nhân viên"
                                       readonly="1"
                                       force_save="1"/>
                            </h2>
                            <h2>
                                <field name="job_title" placeholder="Job Position"/>
                            </h2>
                        </div>
                        <sheet>
                            <group col="2">
                                <group string="Liên hệ">
                                    <field name="personal_email" string="Email cá nhân"
                                           attrs="{'required': [('auto_create_acc','!=', False)]}"/>
                                    <field name="email_work" readonly="1" string="Email công việc"/>
                                    <field name="mobile_phone" string="Số điện thoại cá nhân"/>

                                </group>
                                <group>
                                    <field name="auto_create_acc"/>
                                </group>
                            </group>

                        </sheet>
                        <group>
                            <group>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="public" string="Work Information">
                                <div id="o_work_employee_container">
                                    <group string="Phòng ban làm việc">
                                        <group id="block">
                                            <field name="type_block" string="Khối"
                                                   attrs="{'readonly': [('readonly_type_block', '=', True)]}"/>
                                            <field name="readonly_type_block" invisible="1"/>
                                            <field name="type_in_block_ecom" string="Kiểu trong khối thương mại"
                                                   attrs="{'invisible': [('type_block', '!=', 'BLOCK_COMMERCE_NAME')], 'required': [('type_block', '=', 'BLOCK_COMMERCE_NAME')]}"/>
                                        </group>
                                        <group>
                                            <field name="company_id" required="0" invisible="1"/>
                                            <field name="department_id" string="Hệ thống / Công ty" required="1"
                                                   attrs="{'invisible': [('type_block', '!=', 'BLOCK_COMMERCE_NAME')]}"/>
                                            <field name="department_id" string="Phòng ban" required="1"
                                                   attrs="{'invisible': [('type_block', '!=', 'BLOCK_OFFICE_NAME')]}"/>
                                            <field name="job_id" string="Vị trí công việc"/>
                                            <field name="parent_id" string="Quản lý trực tiếp"/>
                                            <field name="team_marketing"
                                                   attrs="{'invisible': [('type_in_block_ecom', '!=', 'company')]}"/>
                                            <field name="team_sales"
                                                   attrs="{'invisible': [('type_in_block_ecom', '!=', 'company')]}"/>
                                        </group>
                                    </group>
                                    <group>
                                        <field name="work_start_date"/>
                                        <field name="date_receipt"/>
                                        <field name="create_uid"/>
                                    </group>
                                </div>
                            </page>
                            <page name="personal_information" string="Thông tin cá nhân" groups="hr.group_hr_user">
                                <group col="2">
                                    <group string="Citizenship">
                                        <field name="country_id" options='{"no_open": True, "no_create": True}'/>
                                        <field name="identification_id" groups="hr.group_hr_user"/>
                                        <field name="passport_id" groups="hr.group_hr_user"/>
                                        <field name="gender"/>
                                        <field name="birthday"/>
                                        <field name="place_of_birth" groups="hr.group_hr_user"/>
                                        <field name="country_of_birth" groups="hr.group_hr_user"/>
                                    </group>
                                    <group>
                                        <sheet>
                                            <group string="Tình trạng hôn nhân">
                                                <field name="marital"/>
                                                <field name="spouse_complete_name"
                                                       attrs="{'invisible': [('marital', 'not in', ['married', 'cohabitant'])]}"
                                                       groups="hr.group_hr_user"/>
                                                <field name="spouse_birthdate"
                                                       attrs="{'invisible': [('marital', 'not in', ['married', 'cohabitant'])]}"
                                                       groups="hr.group_hr_user"/>
                                                <field name="children"/>
                                            </group>
                                            <group string="Khẩn cấp">
                                                <field name="emergency_contact"/>
                                                <field name="emergency_phone" class="o_force_ltr"/>
                                            </group>
                                        </sheet>
                                    </group>
                                </group>
                            </page>
                            <page string="Danh sách tài liệu">
                                <group>
                                    <field name="profile_status" readonly="1" string="Tình trạng hồ sơ" force_save="1"/>
                                </group>
                                <field name="document_config" readonly="1" force_save="1"/>
                                <field name="document_list" readonly="1" oder="sequence" force_save="1">
                                    <tree class="hrm_custom_tree_notebook">
                                        <field name="sequence"/>
                                        <field name="name"/>
                                        <field name="obligatory"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Khai báo tài liệu">
                                <field name="document_declaration">
                                    <tree class="hrm_custom_tree_notebook">
                                        <field name="name"/>
                                        <field name="complete"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="approval_status" string="Trạng thái phê duyệt"
                                  attrs="{'invisible': [('approved_name', '=', False)]}">
                                <field name="approved_name" readonly="1"/>
                                <field name="approved_link" readonly="1">
                                    <tree default_order="step ASC" class="hrm_custom_tree_notebook">
                                        <field name="step"/>
                                        <field name="approve"/>
                                        <field name="obligatory"/>
                                        <field name="excess_level"/>
                                        <field name="approve_status"/>
                                        <field name="time"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Thiết lập nhân sự" attrs="{'invisible': [('id', '=', False)]}">
                                <group>
                                    <group>
                                        <field name="account_link"/>
                                        <field name="status_account" widget="boolean_toggle"
                                               attrs="{'invisible': [('account_link', '=', False)]}"/>
                                        <!--                                <field name="status_account" widget="boolean_toggle"-->
                                        <!--                                       attrs="{'invisible': [('account_link', '=', False)]}"/>-->
                                    </group>
                                    <group>
                                        <!--                                <field name="date_close"/>-->
                                        <!--                                <field name="date_open"/>-->
                                        <field name="url_reset_password_valid" invisible="1"/>
                                    </group>
                                </group>
                                <div class="alert alert-success text-center o_form_header"
                                     attrs="{'invisible': ['|',('url_reset_password_valid', '=', False),('status_account', '=', False)]}"
                                     role="status">
