        <record id="view_approval_tree" model="ir.ui.view">
            <field name="name">approval.tree.view</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">
                    <field name="employee_code"/>
                    <field name="name"/>
                    <field name="type_block"/>
                    <field name="department_id"/>
                </tree>
            </field>
        </record>
        <record id="approval_action" model="ir.actions.act_window">
            <field name="name">Màn hình phê duyệt</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee</field>
            <field name="domain">[('state', 'in', ['pending', 'wait_reopen']), ('can_see_approved_record', '=', True),
                ('can_see_opening_record', '=', True)]
            </field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_approval_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_employee_form_approval')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Chưa có hồ sơ nào cần phê duyệt.
                </p>
            </field>
            <!--            <field name="search_view_id" ref="view_employee_filter_inherit"/>-->
        </record>
    </data>
</odoo>