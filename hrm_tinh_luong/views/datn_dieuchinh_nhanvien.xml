<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="datn_dieuchinh_line_tree" model="ir.ui.view">
            <field name="name">Phiếu điều chỉnh</field>
            <field name="model">datn.dieuchinh.line</field>
            <field name="arch" type="xml">
                <tree create="0" edit="0" delete="0" default_order="ngay_huong desc">
                    <field name="employee_id"/>
                    <field name="type" readonly="1"/>
                    <field name="muc_huong"/>
                    <field name="ngay_huong"/>
                    <field name="ngay_hieu_luc"/>
                    <field name="ngay_ket_thuc"/>
                    <field name="note"/>
                </tree>
            </field>
        </record>

        <record id="datn_dieuchinh_line_action" model="ir.actions.act_window">
            <field name="name">Phiếu điều chỉnh</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">datn.dieuchinh.line</field>
            <field name="view_mode">tree</field>
            <field name="context">{'view_from_action': '1'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Nhập các tiêu chí để tìm kiếm thông tin Bảng lương tháng.
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window.view" id="datn_dieuchinh_line_tree_action">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="datn_dieuchinh_line_tree"/>
            <field name="act_window_id" ref="datn_dieuchinh_line_action"/>
        </record>
    </data>
</odoo>