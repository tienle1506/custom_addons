<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="datn_luongthang_line_tree" model="ir.ui.view">
            <field name="name">Danh sách phiếu lương</field>
            <field name="model">datn.luongthang.line</field>
            <field name="arch" type="xml">
                <tree create="0" edit="0" delete="0" default_order="date_from desc">
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="tong_tien"/>
                </tree>
            </field>
        </record>

        <record id="datn_luongthang_line_action" model="ir.actions.act_window">
            <field name="name">Danh sách phiếu lương</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">datn.luongthang.line</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'view_from_action': '1'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Nhập các tiêu chí để tìm kiếm thông tin Bảng lương tháng.
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window.view" id="datn_luongthang_line_tree_action">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="datn_luongthang_line_tree"/>
            <field name="act_window_id" ref="datn_luongthang_line_action"/>
        </record>

        <record model="ir.actions.act_window.view" id="datn_luongthang_line_from_action">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="datn_luongthang_line_form"/>
            <field name="act_window_id" ref="datn_luongthang_line_action"/>
        </record>
    </data>
</odoo>