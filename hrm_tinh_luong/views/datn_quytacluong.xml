<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="datn_quytacluong_tree" model="ir.ui.view">
            <field name="name">Quy tắc lương</field>
            <field name="model">datn.quytacluong</field>
            <field name="arch" type="xml">
                <tree>
                    <field string="Mã quy tắc" name="code" required="1"/>
                    <field string="Tên quy tắc" name="name" required="1"/>
                    <field string="Mã Python" name="mapython" required="1"/>
                    <field string="Thứ tự" name="index" required="1"/>
                    <field string="Hiệu lực" name="hieuluc" required="1"/>
                    <field string="Mô tả" name="description"/>
                </tree>
            </field>
        </record>


         <record id="datn_quytacluong_form" model="ir.ui.view">
            <field name="name">Quy tắc lương</field>
            <field name="model">datn.quytacluong</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field string="Mã quy tắc" name="code" required="1"/>
                        <field string="Tên quy tắc" name="name" required="1"/>
                        <field string="Mã Python" name="mapython" required="1"/>
                        <field string="Thứ tự" name="index" required="1"/>
                        <field string="Hiệu lực" name="hieuluc" required="1"/>
                        <field string="Mô tả" name="description"/>
                    </group>

                </form>
            </field>
        </record>

        <record id="datn_quytacluong_action" model="ir.actions.act_window">
            <field name="name">Quy tắc lương</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">datn.quytacluong</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'view_from_action_all': 'datn_quytacluong'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Nhập các tiêu chí để tìm kiếm thông tin Bảng quy tắc lương.
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window.view" id="datn_quytacluong_tree_action">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="datn_quytacluong_tree"/>
            <field name="act_window_id" ref="datn_quytacluong_action"/>
        </record>

        <record model="ir.actions.act_window.view" id="datn_quytacluong_form_action">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="datn_quytacluong_form"/>
            <field name="act_window_id" ref="datn_quytacluong_action"/>
        </record>
    </data>
</odoo>