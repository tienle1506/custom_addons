<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="datn_dieuchinh_tree" model="ir.ui.view">
            <field name="name">Phiếu điều chỉnh</field>
            <field name="model">datn.dieuchinh</field>
            <field name="arch" type="xml">
                <tree class="widget-department-tree"
                      default_order="ngay_tao desc">
                    <field name="department_id"/>
                    <field name="type"/>
                    <field name="ngay_tao"/>
                </tree>
            </field>
        </record>

        <record id="datn_dieuchinh_form" model="ir.ui.view">
            <field name="name">Phiếu điều chỉnh</field>
            <field name="model">datn.dieuchinh</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="department_id" required="1"/>
                    </group>
                    <group>
                        <field name="type" required="1"/>
                    </group>
                    <group>
                            <group>
                                <field name="is_import"/>
                                <label for="is_import" string="Tải tập tin mẫu" attrs="{'invisible': [('is_import','=',False)]}"/>
                                <div attrs="{'invisible': [('is_import','=',False)]}">
                                    <button type="object" name="download_template_file" string="Tải file mẫu"
                                            attrs="{'invisible': [('is_import','=',False)]}" class="oe_highlight btn-sm"/>
                                </div>
                            </group>
                            <group>
                                <field name="datn_file" attrs="{'invisible': [('is_import','=',False)]}" filename="file_name"/>
                                <field name="file_name" invisible="1"/>
                                <label for="file_name" string="Import" attrs="{'invisible': [('datn_file','==',False)]}"/>
                                <div attrs="{'invisible': [('is_import','=',False)]}">
                                    <button name="import_data" type="object" string="Import dữ liệu" attrs="{'invisible': [('datn_file','=', False)]}" class="btn-primary btn-sm"/>
                                </div>
                            </group>
                        </group>
                    <group>
                        <group>
                            <field name="ngay_tao" widget="date" string="Ngày tạo"
                                   attrs="{'invisible': [('id','=',False)]}"
                                   style="max-width: 200px;" readonly="1" force_save="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Danh sách nhân sự hưởng điều chỉnh" name="data_timesheet">
                            <field name="item_ids"
                                   widget="one2many_list">
                                <tree editable="bottom" create="true" open="false"
                                      class="color_tree_row"
                                      tableFixer="left" fixColumn="2"
                                      default_order="employee_id ASC" limit="100">
                                    <field name="employee_id" required="1" widget="many2one" context="{'parent_department_id': parent.department_id}"
                                           options="{'no_quick_create': 1, 'no_create_edit': 1, 'no_open': 1, 'no_create': 1}"/>
                                    <field name="type" readonly="1" force_save="1"/>
                                    <field name="muc_huong"/>
                                    <field name="ngay_huong"/>
                                    <field name="ngay_hieu_luc"/>
                                    <field name="ngay_ket_thuc"/>
                                    <field name="note"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="datn_dieuchinh_search" model="ir.ui.view">
            <field name="name">Phiếu điều chỉnh</field>
            <field name="model">datn.dieuchinh</field>
            <field name="arch" type="xml">
                <search>
                    <group expand="0" string="Group By">
                        <filter name="type" string="loại điều chỉnh" domain="[]" context="{'group_by':'type'}"/>
                        <filter name="department_id" string="Đơn vị/ phòng ban" domain="[]" context="{'group_by':'department_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="datn_dieuchinh_action" model="ir.actions.act_window">
            <field name="name">Phiếu điều chỉnh</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">datn.dieuchinh</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_type':'luong', 'view_from_action_all': 'datn_hr_checkin_checkout'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Nhập các tiêu chí để tìm kiếm thông tin phiếu điều chỉnh.
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window.view" id="datn_dieuchinh_tree_action">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="datn_dieuchinh_tree"/>
            <field name="act_window_id" ref="datn_dieuchinh_action"/>
        </record>

        <record model="ir.actions.act_window.view" id="datn_dieuchinh_form_action">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="datn_dieuchinh_form"/>
            <field name="act_window_id" ref="datn_dieuchinh_action"/>
        </record>
    </data>
</odoo>