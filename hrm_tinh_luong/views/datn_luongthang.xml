<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="datn_luongthang_tree" model="ir.ui.view">
            <field name="name">Bảng lương tháng</field>
            <field name="model">datn.luongthang</field>
            <field name="arch" type="xml">
                <tree class="widget-department-tree"
                      decoration-info="state=='draft'"
                      default_order="department_id">
                    <field name="department_id"/>
                    <field name="name"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="ngay_chi_tra"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="datn_luongthang_form" model="ir.ui.view">
            <field name="name">Danh sách nhân viên</field>
            <field name="model">datn.luongthang</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Gửi phê duyệt" name="action_send_approve" type="object" attrs="{'invisible': [('state','!=','draft')]}"
                                class="oe_highlight"/>
                        <button string="Phê duyệt" name="action_approve" type="object" attrs="{'invisible': ['|', ('state','=','draft'), ('state','=','approved')]}"
                                groups="hrm_chamcong.hrm_phe_duyet_dang_ky_nghi"
                                class="oe_highlight"/>
                        <button string="Từ chối" name="action_refuse" type="object" attrs="{'invisible': ['|', ('state','=','draft'),('state','!=','approved')]}"
                                class="oe_highlight"
                                groups="hrm_chamcong.hrm_phe_duyet_dang_ky_nghi"/>
                        <button string="Soạn thảo" name="action_draft" type="object"
                                attrs="{'invisible': [('state', 'in', ['draft','confirmed', 'approved'])]}"/>
                        <button string="Tải dữ liệu" name="action_loaddata" type="object" class="oe_highlight oe_edit_only" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <group>
                        <field name="nguoi_duyet" options="{'no_quick_create': 1, 'no_create_edit': 1, 'no_open': 1, 'no_create': 1}"
                                       widget="many2many_tags"  attrs="{'readonly': [('state','!=','draft')]}"/>
                        <field name="name" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="department_id" required="1" widget="many2one" options="{'no_quick_create': 1, 'no_create_edit': 1, 'no_open': 1, 'no_create': 1}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                    <group>
                        <group class="date_cc">
                            <label for="date_from" string="Chu kỳ tính lương"/>
                            <div>
                                <field name="date_from"
                                       class="date1 oe_inline" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                -
                                <field name="date_to" readonly="1" force_save="1"
                                       class="date2 oe_inline"/>
                            </div>
                        </group>
                        <group>
                            <field name="ngay_chi_tra" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>

                    </group>
                    <notebook>
                           <page string="Danh sách nhân sự nhận lương" name="data_timesheet">
                            <field name="item_ids" attrs="{'readonly': [('state', '!=', 'draft')]}" widget="one2many_list">
                                <tree open="1" class="color_tree_row" tableFixer="left" fixColumn="2" default_order="employee_id ASC" limit="100">
                                    <field name="employee_id" required="1" widget="many2one"
                                           options="{'no_quick_create': 1, 'no_create_edit': 1, 'no_open': 1, 'no_create': 1}"/>
                                    <field name="department_id" readonly="1" force_save="1"/>
                                    <field name="date_from" readonly="1" force_save="1"/>
                                    <field name="date_to" readonly="1" force_save="1"/>
                                    <field name="tong_tien" readonly="1" force_save="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="datn_luongthang_line_form" model="ir.ui.view">
            <field name="name">Bảng lương</field>
            <field name="model">datn.luongthang.line</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="employee_id" readonly="1" force_save="1"/>
                        <field name="tong_tien" readonly="1" force_save="1"/>
                    </group>
                    <group>
                        <field name="department_id" readonly="1" force_save="1"/>
                        <group class="date_cc">
                            <label for="date_from" string="Chu kỳ tính lương"/>
                            <div>
                                <field name="date_from"
                                       class="date1 oe_inline"/>
                                -
                                <field name="date_to" readonly="1" force_save="1"
                                       class="date2 oe_inline"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="Bảng chi tiết các khoản" name="data_timesheet">
                            <field name="item_ids"
                                   widget="one2many_list">
                                <tree create="0" edit="0" open="false" class="color_tree_row" tableFixer="left" fixColumn="2" default_order="index ASC" limit="100">
                                    <field name="code" readonly="1" force_save="1"/>
                                    <field name="name" readonly="1" force_save="1"/>
                                    <field name="index" readonly="1" force_save="1"/>
                                    <field name="tong_tien" readonly="1" force_save="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="datn_luongthang_search" model="ir.ui.view">
            <field name="name">Bảng lương tháng</field>
            <field name="model">datn.luongthang</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('ref','ilike',self)]" string="Tên"/>
                    <group expand="0" string="Group By">
                        <filter name="date_from" string="Tháng" domain="[]" context="{'group_by':'date_from'}"/>
                        <filter name="department_id" string="Đơn vị/ phòng ban" domain="[]" context="{'group_by':'department_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="datn_luongthang_action" model="ir.actions.act_window">
            <field name="name">Bảng lương tháng</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">datn.luongthang</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_date_from':1, 'search_default_department_id':1, 'view_from_action_all': 'datn_luongthang'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Nhập các tiêu chí để tìm kiếm thông tin Bảng lương tháng.
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window.view" id="datn_luongthang_tree_action">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="datn_luongthang_tree"/>
            <field name="act_window_id" ref="datn_luongthang_action"/>
        </record>

        <record model="ir.actions.act_window.view" id="datn_luongthang_form_action">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="datn_luongthang_form"/>
            <field name="act_window_id" ref="datn_luongthang_action"/>
        </record>
    </data>
</odoo>